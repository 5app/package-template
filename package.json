{
  "name": "js-template",
  "version": "1.0.0",
  "private": true,
  "description": "Description",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./",
    "lint-fix": "npm run lint -- --fix",
    "lint-diff": "LIST=`git diff-index --name-only HEAD | grep '.*\\.js$';`; if [ \"$LIST\" ]; then eslint $LIST; fi",
    "precommit-msg": "echo 'Running pre-commit checks... (skip using --no-verify)' && exit 0",
    "semantic-release": "semantic-release",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/5app/js-template.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/5app/js-template/issues"
  },
  "homepage": "https://github.com/5app/js-template#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.12",
    "eslint": "^6.0.0",
    "eslint-config-5app": "^0.7.7",
    "husky": "^3.0.4",
    "semantic-release": "^15.13.16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit-msg && npm run lint-diff"
    }
  }
}
